---
const navItems = [
  { href: '#home', text: 'Inicio' },
  { href: '#services', text: 'Servicios' },
  { href: '#about', text: 'Sobre Nosotros' }
];
---

<header class="fixed w-full top-0 z-50 ">
  <nav class="container mx-auto px-4 sm:px-6 py-3 flex justify-between items-center">
    <a href="#home" class="text-xl font-display font-bold bg-white p-2 rounded-md text-secondary hover:text-primary transition-colors">
      Trea<span class="text-primary">Work</span>
    </a>

    {/* Desktop Navigation */}
    <div class="hidden md:flex items-center">
      <ul class="flex items-center space-x-6 bg-white p-3 rounded-md">
        {navItems.map((item) => (
          <li>
            <a href={item.href} class="p2 text-secondary hover:text-primary transition-colors border-b-2 border-transparent hover:border-primary">
              {item.text}
            </a>
          </li>
        ))}
      </ul>
    </div>

    <div>
      <a 
      href="#contact" class="hidden md:flex text-xl font-normal bg-white p-2 rounded-md text-secondary hover:text-primary transition-colors">
      Contactanos
      </a>
    </div>

    {/* Mobile Navigation Button */}
    <div class="md:hidden">
      <button id="mobile-menu-button" class="text-secondary focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
        </svg>
      </button>
    </div>
  </nav>

  {/* Mobile Navigation Menu */}
  <div id="mobile-menu" class="hidden md:hidden">
    <ul class="px-2 pt-2 pb-3 space-y-1 sm:px-3">
      {navItems.map((item) => (
        <li>
          <a href={item.href} class="block p-3 bg-white text-secondary hover:text-primary rounded-md px-3 py-2 text-base font-medium">
            {item.text}
          </a>
        </li>
      ))}
    </ul>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });
</script>
